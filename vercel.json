{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "git": {
    "deploymentEnabled": {
      "develop": false,
      "main": false,
      "test": false
    }
  },
  "crons": [
    {
      "path": "/api/cron/check-expired-contracts",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/cron/cleanup",
      "schedule": "0 3 * * *"
    },
    {
      "path": "/api/cron/close-simulations",
      "schedule": "0 4 * * *"
    }
  ]
}
